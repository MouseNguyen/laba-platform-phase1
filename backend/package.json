{
    "name": "laba-platform-backend",
    "version": "0.0.1",
    "description": "Laba Platform Phase 1 Backend",
    "author": "",
    "private": true,
    "license": "UNLICENSED",
    "scripts": {
        "build": "nest build",
        "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
        "start": "nest start",
        "start:dev": "nest start --watch",
        "start:debug": "nest start --debug --watch",
        "start:prod": "node dist/main",
        "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
        "prisma:generate": "prisma generate",
        "prisma:migrate": "prisma migrate dev",
        "prisma:seed": "ts-node prisma/seed.ts",
        "test:e2e": "jest --config ./test/jest-e2e.json",
        "test:e2e:auth": "jest --config ./test/jest-e2e.json --runInBand --detectOpenHandles --verbose auth-token-reuse.e2e-spec.ts",
        "test:pact:provider": "jest --config ./test/jest-pact.json",
        "generate-secrets": "node scripts/generate-secrets.js"
    },
    "dependencies": {
        "@nestjs/common": "^10.0.0",
        "@nestjs/config": "^3.1.1",
        "@nestjs/core": "^10.0.0",
        "@nestjs/jwt": "^11.0.1",
        "@nestjs/passport": "^11.0.5",
        "@nestjs/platform-express": "^10.0.0",
        "@nestjs/schedule": "^6.0.1",
        "@nestjs/throttler": "^5.2.0",
        "@prisma/client": "^5.19.0",
        "@willsoto/nestjs-prometheus": "^6.0.2",
        "argon2": "^0.44.0",
        "class-transformer": "^0.5.1",
        "class-validator": "^0.14.0",
        "cookie-parser": "^1.4.7",
        "helmet": "^8.1.0",
        "ioredis": "^5.8.2",
        "joi": "^17.11.0",
        "ms": "^2.1.3",
        "passport": "^0.7.0",
        "passport-jwt": "^4.0.1",
        "prom-client": "^15.1.3",
        "reflect-metadata": "^0.1.13",
        "rxjs": "^7.8.1"
    },
    "devDependencies": {
        "@nestjs/cli": "^10.0.0",
        "@nestjs/schematics": "^10.0.0",
        "@nestjs/testing": "^10.0.0",
        "@pact-foundation/pact": "^16.0.2",
        "@types/cookie-parser": "^1.4.10",
        "@types/express": "^4.17.17",
        "@types/jest": "^29.5.2",
        "@types/ms": "^2.1.0",
        "@types/node": "^20.19.25",
        "@types/passport-jwt": "^4.0.1",
        "@types/supertest": "^2.0.12",
        "@typescript-eslint/eslint-plugin": "^6.0.0",
        "@typescript-eslint/parser": "^6.0.0",
        "eslint": "^8.42.0",
        "eslint-config-prettier": "^9.0.0",
        "eslint-plugin-prettier": "^5.0.0",
        "jest": "^29.5.0",
        "prettier": "^3.0.0",
        "prisma": "^5.19.0",
        "source-map-support": "^0.5.21",
        "supertest": "^6.3.3",
        "ts-jest": "^29.1.0",
        "ts-loader": "^9.4.3",
        "ts-node": "^10.9.2",
        "tsconfig-paths": "^4.2.0",
        "typescript": "^5.9.3"
    },
    "jest": {
        "moduleFileExtensions": [
            "js",
            "json",
            "ts"
        ],
        "rootDir": "src",
        "testRegex": ".*\\.spec\\.ts$",
        "transform": {
            "^.+\\.(t|j)s$": "ts-jest"
        },
        "collectCoverageFrom": [
            "**/*.(t|j)s"
        ],
        "coverageDirectory": "../coverage",
        "testEnvironment": "node"
    },
    "prisma": {
        "seed": "ts-node prisma/seed.ts"
    }
}
