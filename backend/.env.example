# Environment
NODE_ENV=development
PORT=3000

# Database
DATABASE_URL=postgresql://user:password@localhost:5432/laba_platform_dev?schema=public

# Security - Argon2
ARGON2_MEMORY_COST=65536
ARGON2_TIME_COST=3
ARGON2_PARALLELISM=4

# Security - JWT
JWT_ACCESS_SECRET=your_access_secret_key_here
JWT_REFRESH_SECRET=your_refresh_secret_key_here
JWT_ACCESS_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# Security - Cookies
COOKIE_SECRET=your_cookie_secret_here

# CORS
CORS_ORIGIN=http://localhost:3001

# Rate Limiting & Security
RATE_LIMIT_LOGIN_PER_USER=5
RATE_LIMIT_LOGIN_PER_IP=10
RATE_LIMIT_REGISTER_PER_IP=3
ACCOUNT_LOCK_THRESHOLD=5
ACCOUNT_LOCK_DURATION_MIN=15

# Token Cleanup
TOKEN_CLEANUP_GRACE_DAYS=30
TOKEN_CLEANUP_BATCH_SIZE=100

# Monitoring (Optional)
ALERT_WEBHOOK_URL=
